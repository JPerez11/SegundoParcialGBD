<%- include('template/header',{tituloWeb:'Facturas'}); %>

<div class="container">

  <div class="d-flex mb-3 align-items-center">
    <div class="me-auto p-2">
      <h1><%= modulo %></h1>
    </div>
    <div class="p-2">
      <a class="btn btn-info text-white" href="/facturas/crearFactura" role="button"><i class="fa-solid fa-plus"></i> crear factura</a>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr class="table-info">
        <th scope="col">Factura id</th>
        <th scope="col">Cliente</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
      <% if(arrayFacturas.length > 0) { %>
        <% arrayFacturas.forEach(factura => { %>
        <tr>
          <td><%= factura.id %></td>
          <td><%= factura.cliente %></td>
          <td>$<%= factura.total %></td>
        </tr>
        <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3">No se encontraron facturas en la base de datos</td>
            </tr>
      <% } %>
    </tbody>
  </table> 
</div>

<%- include('template/footer'); %>